#!/bin/bash
# get EZDPL_HOME
if [[ -z ${EZDPL_HOME} ]]; then
    _dir=$(dirname `readlink -f $0`)
    _last_dir=` echo "$_dir"|awk -F'/' '{print $NF}'`
    EZDPL_HOME=`echo "$_dir"|sed 's/\/'$_last_dir'//g'`    
fi
_usageInfo="Usage: chkngxlog <status|url> <nginx_access_log_file>
status: Statistics for all http status
url   : Statistics for URL and X-Forwarded-For IP
url45 : Statistics for URL and X-Forwarded-For IP of none 20x/30x requests
trans : Statistics total data transfered in MB
"

if [[ $# -lt 2 ]];then
    echo "$_usageInfo";exit 1
fi
_oper=$1
_access_log=$2

case $_oper in
    status)
        cat $_access_log |awk '{for (i=1;i<=NF;i++) if($i ~ /HTTP\/1.?/) print " "$(i+1)}'|sort|uniq -c
        ;;
    url45)
        echo -e "Count\tHost\tURL\tMTHD\tIp\tXF_IP\tStatus"
	cat $_access_log |awk '{for (i=1;i<=NF;i++) if($i ~ /HTTP\/1.?/ && $(i+1) !~ /20?/ && $(i+1) !~ /30?/ && $(i+1) !~ /10?/) print $(NF-4)$(i-1)"\t"$(i-2)"\t"$1"\t"$(NF-5)"\t"$(i+1)}'|sort|uniq -c|sort -h|sed 's/\"//g'
        ;;
    url)
        echo -e "Count\tHost\tURL\tMTHD\tIp\tXF_IP\tStatus"
	cat $_access_log |awk '{for (i=1;i<=NF;i++) if($i ~ /HTTP\/1.?/) print $(NF-4)$(i-1)"\t"$(i-2)"\t"$1"\t"$(NF-5)"\t"$(i+1)}'|sort|uniq -c|sort -h|sed 's/\"//g'
        ;;
    trans)
	awk '{total+=($10/1024/1024)} END {print "Transfered(MB)=" total}' $_access_log
	;;
    *)
	echo "$_usageInfo"
        ;;
esac
