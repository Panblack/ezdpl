#!/bin/bash
# Determine ezdpl home
if [[ -z ${EZDPL_HOME} ]]; then
    _dir=$(dirname `readlink -f $0`)
    cd $_dir && cd ..
    EZDPL_HOME=`pwd`
fi
echo "EZDPL_HOME : ${EZDPL_HOME}"

#Main
_hint="
Usage:
app p <host>	check tomcat processes on <host>.
app l <host> 	show tomcat apps & processes on <host>.
" 
_op=$1
_app_server=$2

case $_op in 
p)
    ${EZDPL_HOME}/bin/scon $_app_server e 'psj'
    ;;
l)
    ${EZDPL_HOME}/bin/scon $_app_server e 'ls -lhtr --time-style=long-iso /opt/webs/*/webapps ;echo;mount|grep nfs4'
    ;;
*)
    echo "$_hint"
    ;;
esac

